# This SSH client configuration file is mainly meant to use two different keys
# for github.com, based on two fictitious, custom-mage hostnames

Host bitbucket.org
    IdentityFile %d/.ssh/work_rsa

Host ssh.dev.azure.com vs-ssh.visualstudio.com
    IdentityFile %d/.ssh/work_rsa
    PubkeyAcceptedAlgorithms +ssh-rsa
    HostkeyAlgorithms +ssh-rsa

Host personal.github.com
    HostName github.com
    IdentityFile %d/.ssh/personal_rsa

Host work.github.com
    HostName github.com
    IdentityFile %d/.ssh/work_rsa
