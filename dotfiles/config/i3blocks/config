# This is the i3blocks config file

# This block shows the time and the date, including the weekday
[time]
command=date '+%H:%M:%S %d-%m-%Y (%a)'
interval=1

# This block shows whether system updates are available
[apt-upgrades]
command=apt-upgrades -s ''
interval=once
signal=1

# This block shows the CPU usage in percentage
[cpu_usage2]
command=cpu_usage2 -t 1 -l '' -d 0
interval=persist
markup=pango

# This block displays CPU temperature
[temperature]
command=temperature -w 50 -c 80
interval=1

# This block displays memory utilizaton
[memory]
command=memory
interval=30

# This block displays the main mail watcher
[email]
command=email | sed '1 s/^/main: /'
instance=main
interval=600

# This block displays the spam mail watcher
[email]
command=email | sed '1 s/^/spam: /'
instance=spam
interval=600
