# working-repos systemd service file
#
# {{@@ header() @@}}
#
# {%@@ set repos_path = wiki_path | tilde2home @@%}

[Unit]
Description=Job keeping up-to-date working copies of repositories

[Service]
ExecStart=mr -c "{{@@ repos_path @@}}/.mrconfig" -d "{{@@ repos_path @@}}" update
StandardError=journal
StandardOutput=journal
SyslogFacility=local0
SyslogIdentifier=working-repos
SyslogLevel=info
SyslogLevelPrefix=true
Type=oneshot
