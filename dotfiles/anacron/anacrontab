# /etc/anacrontab: configuration file for anacron

# See anacron(8) and anacrontab(5) for details.

SHELL=/bin/sh
PATH=/usr/local/bin:/bin:/usr/bin

@daily        1        shell.cache.refresh  refresh-shell-cache
@daily        1        shell.plugins.update antibody update
@daily  1   repos.update            mr -d $HOME -m update 2>&1 | grep update | tac | logger -p 'local0.info' -t 'MYREPOS'
