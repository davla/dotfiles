#!/usr/bin/env sh

# {{@@ header() @@}}

# This script defines environment variables for POSIX shell

#######################################
# Custom
#######################################

export DOTFILES_HOME="{{@@ "$HOME/Files/Programming/sys/dotfiles"
    | find_in_home @@}}"
export PYWIKIBOT_DIR="{{@@ "$HOME/Files/pywikibot" | find_in_home @@}}"

#######################################
# Docker
#######################################

export DOCKER_CONFIG="{{@@ docker_path | home_abs2var @@}}"

#######################################
# Gtk 2
#######################################

export GTK2_RC_FILES="{{@@ gtk2_path | home_abs2var @@}}/gtkrc"

#######################################
# Path
#######################################

LOCAL_PATH='/usr/local/bin'
case "$PATH" in
    *$LOCAL_PATH*)
        ;;
    *)
        export PATH="$LOCAL_PATH:$PATH"
        ;;
esac

{%@@ if user == 'root' @@%}
LOCAL_PATH='/usr/local/sbin'
case "$PATH" in
    *$LOCAL_PATH*)
        ;;
    *)
        export PATH="$LOCAL_PATH:$PATH"
        ;;
esac
{%@@ endif @@%}

unset LOCAL_PATH
