# {{@@ header() @@}}
#
# /etc/anacrontab: configuration file for anacron
#
# See anacron(8) and anacrontab(5) for details.

SHELL=/bin/sh
PATH=/usr/local/bin:/bin:/usr/bin

{%@@ include 'cron/anacrontab.shared' @@%}

1   1   repos.update            mr -md {{@@ mr_default_dir @@}} update 2>&1 | grep update | tac | cron-logger 'MYREPOS'
1   1   atom.update             apm update -c false > /dev/null 2>&1; cron-logger 'APM-UPDATE' "$?"
