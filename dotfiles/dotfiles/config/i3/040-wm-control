# This i3 configuration file holds keyboard shortcuts to control i3 itself

#######################################
# Shortcuts
#######################################

# Reload the configuration file
bindsym $mod+$wm_control_key+c reload

# Restart
bindsym $mod+$wm_control_key+x restart

# Exit
bindsym $mod+$wm_control_key+v exec "i3-nagbar --type warning \
    --message 'You pressed the i3 exit shortcut. Do you really want to exit i3?' \
    --button-no-terminal 'Yes, exit i3' 'i3-msg exit'"
