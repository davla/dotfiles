# {{@@ header() @@}}
#
# This is the i3blocks config file

# This block shows the time and the date, including the weekday
[time]
command=date '+%H:%M:%S        %d-%m-%Y (%a)'
interval=1

# This block displays the main mail watcher
[email]
command=i3blocks-email | sed '1 s/^/main: /'
instance=main
interval={{@@ 60 * 10 @@}}

# This block displays the spam mail watcher
[email]
command=i3blocks-email | sed '1 s/^/spam: /'
instance=spam
interval={{@@ 60 * 10 @@}}

# This block shows whether system updates are available
[apt-upgrades]
command=i3blocks-apt-upgrades -s ''
interval=once
signal={{@@ apt_signal @@}}

# This block displays toggle and dead keys status
[key-indicator]
command=i3blocks-keyindicator2
interval=once
markup=pango
signal={{@@ caps_signal @@}}

# This block displays the Ethernet and Wi-Fi status
[network]
command=i3blocks-network-status -i cable -i wireless
interval=1
markup=pango
signal={{@@ network_signal @@}}

# This block shows the CPU usage in percentage
[cpu_usage2]
command=i3blocks-cpu_usage2 -t 2 -l '' -d 0
interval=persist
markup=pango
min_width= 100%

# This block displays CPU temperature
[temperature]
command=i3blocks-temperature -w 60 -c 80
interval=2

# This block displays memory utilizaton
[memory]
command=i3blocks-memory
interval=2
